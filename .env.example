# Firebase Configuration
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=

# Admin Email (optional, for protected routes)
VITE_ADMIN_EMAIL=admin@email.com

# Cloudinary (Client-side only; use unsigned preset)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_unsigned_upload_preset

# Server-only (Vercel) variables
# Used by api/cloudinary-delete.js
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
# Optional: set ADMIN_EMAIL if you prefer not to reuse VITE_ADMIN_EMAIL
# ADMIN_EMAIL=your_admin@email.com
# To verify Firebase ID tokens server-side via Identity Toolkit
FIREBASE_WEB_API_KEY=your_firebase_web_api_key
